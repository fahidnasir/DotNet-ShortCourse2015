<Window x:Class="WPF_DB_Sample.SecondScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="2nd Screen Without Model"
        Height="300"
        Width="585">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Content="This is Second Window."
               FontSize="50" />
        <Button Name="btnClose"
                Height="50"
                Margin="20"
                Grid.Row="1"
                Content="Close Window"
                Click="btnClose_Click" />
    </Grid>
</Window>
